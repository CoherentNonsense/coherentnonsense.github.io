---
layout: base
---
<main id="project">
  <div id="banner-img">
    <img src="/project_thumbnails/{{ name | slugify }}.gif">
    <h1>{{ name }}</h1>
  </div>
  <div class="content">
    <div class="action-button-list">
      <a href="{{ live }}" class="live"><div>Live</div></a>
      <a href="{{ source }}" class="live"><div>Source</div></a>
    </div>
    <div class="tag-list">
      {%- for tool in tools -%}
        <p>{{ tool }}</p>
      {%- endfor -%}
    </div>
  </div>
  <article class="content">
    {{ content | safe }}
  </article>
</main>