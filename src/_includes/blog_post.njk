---
layout: padded
---
<article>
  <h1>{{ title }}</h1>
  <p class="date">{{ date | formatDate }}</p>
  <div class="tag-list">
    {%- for tagItem in tags | filterTagList -%}
      <a href="/blog/tags/{{ tagItem | slugify }}/" class="tag-item">{{ tagItem }}</a>
    {%- endfor -%}
  </div>
  <hr>
  {{ content | safe }}
  <div class="bottom">
    <a href="/blog/">‚Üê Back to all posts</a>
  </div>
  <hr>
</article>
<section id="comments">
  <div class="header">
    <h2>Comments</h2>
    <button id="add-comment">Add Comment</button>
  </div>
  {% if comments[page.fileSlug] %}
  <ul id="comment-list">
    {% for _, comment in comments[page.fileSlug] %}
      <li id="{{ comment._id }}">
        <div>
          <span class="n">{{ comment.name }}</span> <span class="d">{{ comment.date | formatDate }}</span>
        </div>
        <p class="m">{{ comment.message }}</p>
      </li>
    {% endfor %}
  </ul>
  {% else %}
    <p style="margin-top: 1em;">No Comments</p>
  {% endif %}
