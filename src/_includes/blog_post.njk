---
layout: padded
---
<article>
  <h1>{{ title }}</h1>
  <p class="date">{{ date | formatDate }}</p>
  <div class="tag-list">
    {%- for tagItem in tags | filterTagList -%}
      <a href="/blog/tags/{{ tagItem | slugify }}/" class="tag-item">{{ tagItem }}</a>
    {%- endfor -%}
  </div>
  <hr>
  {{ content | safe }}
  <form method="POST" action="https://cohnon-staticman.herokuapp.com/v3/entry/github/coherentnonsense/coherentnonsense.github.io/main/comments">
    <!-- e.g. "2016-01-02-this-is-a-post" -->
    <input name="options[slug]" type="hidden" value="{{ page.slug }}">
    <label><div>Name</div><input name="fields[name]" type="text"></label>
    <label><div>Message</div><textarea name="fields[message]"></textarea></label>
    
    <button type="submit">Go!</button>
  </form>
  <div class="bottom">
    <a href="/blog/">‚Üê Back to all posts</a>
  </div>
</article>