---
layout: padded
permalink: /blog/
---
<ul>
  {%- for post in collections.blog | reverse -%}
    <li class="blog-item">
      <a href="{{ post.url }}" class="title">{{ post.data.title }}</a>
      <p class="date">{{ post.date | formatDate }}</p>
      <div class="tag-list">
        {%- for tag in post.data.tags | filterTagList -%}
        <a href="/blog/tags/{{ tag | slugify }}/" class="tag-item">{{ tag }}</a>
        {%- endfor -%}
      </div>
      <p class="desc">{{ post.templateContent | striptags(true) | truncate(150) }}</p>
    </li>
  {%- endfor -%}
</ul>